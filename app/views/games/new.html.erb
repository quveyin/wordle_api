<% content_for :title, "Wordle" %>

<div style="max-width: 600px; margin: 0 auto; padding: 30px; text-align: center;">
  <h1 style="margin-bottom: 30px; color: rgba(6, 28, 51, 1); font-size: 2.5em;">Wordle</h1>

  <%= form_with model: @game, local: true do |f| %>
    <%= f.submit "Yeni Oyun Başlat", style: "padding: 18px 35px; font-size: 20px; background: linear-gradient(45deg, rgba(5, 41, 65, 1), #2980b9); color: white; border: none; border-radius: 10px; font-weight: bold; cursor: pointer; box-shadow: 0 6px 20px rgba(52, 152, 219, 0.3); margin-bottom: 30px;" %>
  <% end %>

  <div style="padding: 25px; background-color: rgba(248,249,250,0.8); border-radius: 12px; border-left: 4px solid #3498db;">
    <h3 style="color: rgba(3, 32, 61, 1); margin-bottom: 20px;">Oyun İpuçları:</h3>
    <ul style="list-style: none; padding: 0; text-align: center;">
      <li style="margin: 15px 0; font-size: 16px;">5 harfli kelime için 6 tahmin hakkınız bulunmakta.</li>
      <li style="margin: 15px 0; display: flex; align-items: center; justify-content: center;">
        <span style="background: linear-gradient(45deg, #2ecc71, #27ae60); color: white; padding: 8px 12px; border-radius: 6px; margin-right: 10px; font-weight: 600;">Yeşil</span>
        <span>Doğru harf, doğru yerde</span>
      </li>
      <li style="margin: 15px 0; display: flex; align-items: center; justify-content: center;">
        <span style="background: linear-gradient(45deg, #f39c12, #e67e22); color: white; padding: 8px 12px; border-radius: 6px; margin-right: 10px; font-weight: 600;">Turuncu</span>
        <span>Doğru harf, yanlış yerde</span>
      </li>
      <li style="margin: 15px 0; display: flex; align-items: center; justify-content: center;">
        <span style="background: linear-gradient(45deg, #95a5a6, #7f8c8d); color: white; padding: 8px 12px; border-radius: 6px; margin-right: 10px; font-weight: 600;">Gri</span>
        <span>Harf kelimede yok</span>
      </li>
    </ul>
  </div>
</div>